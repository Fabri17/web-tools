  description="Todas tus herramientas favoritas de desarrollo. Convierte Markdown a PDF, optimiza imágenes, genera QR y más. 100% gratis."
>
  <Hero />

  <!-- Ad after hero section -->
  <AdManager
    pageType="landing"
    position="top"
    adFormat="horizontal"
    showSupport={false}
  />

  <FeaturesSection tools={tools} />

  <!-- Ad in the middle of content -->
  <AdManager
    pageType="landing"
    position="middle"
    adFormat="rectangle"
    showSupport={false}
  />

  <AboutSection toolCount={activeToolsCount} />

  <!-- Final ad before footer -->
  <AdManager
    pageType="landing"
    position="bottom"
    adFormat="horizontal"
    showSupport={true}
    supportVariant="default"
  />

  <Footer />
</Layout>
