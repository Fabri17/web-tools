  <style>
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .content-sections {
      margin-top: 3rem;
      display: flex;
      flex-direction: column;
      gap: 4rem;
    }

    .section-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .section-header h2 {
      font-size: 2rem;
      font-weight: 700;
      color: #1e293b;
      margin: 0;
    }

    :global(.dark-mode) .section-header h2 {
      color: #f8fafc;
    }

    .section-content {
      max-width: 800px;
      margin: 0 auto;
    }

    .section-content p {
      font-size: 1.125rem;
      line-height: 1.7;
      color: #475569;
      text-align: center;
      margin: 0;
    }

    :global(.dark-mode) .section-content p {
      color: #cbd5e1;
    }

    .support-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }

    .support-card {
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      border-radius: 16px;
      padding: 2rem;
      text-align: center;
      transition: all 0.3s ease;
    }

    .support-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      border-color: #cbd5e1;
    }

    :global(.dark-mode) .support-card {
      background: #1e293b;
      border-color: #334155;
    }

    :global(.dark-mode) .support-card:hover {
      border-color: #475569;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .support-icon {
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, #667eea, #764ba2);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      margin: 0 auto 1.5rem;
    }

    .support-card h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #1e293b;
      margin: 0 0 1rem 0;
    }

    :global(.dark-mode) .support-card h3 {
      color: #f8fafc;
    }

    .support-card p {
      font-size: 0.9375rem;
      line-height: 1.6;
      color: #64748b;
      margin: 0;
      text-align: center;
    }

    :global(.dark-mode) .support-card p {
      color: #94a3b8;
    }

    .ads-info {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }

    .ads-card {
      background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
      border: 1px solid #bae6fd;
      border-radius: 12px;
      padding: 1.5rem;
    }

    :global(.dark-mode) .ads-card {
      background: linear-gradient(135deg, #0c4a6e, #075985);
      border-color: #0369a1;
    }

    .ads-card h3 {
      font-size: 1.125rem;
      font-weight: 600;
      color: #0c4a6e;
      margin: 0 0 0.75rem 0;
    }

    :global(.dark-mode) .ads-card h3 {
      color: #bae6fd;
    }

    .ads-card p {
      font-size: 0.9375rem;
      line-height: 1.6;
      color: #0369a1;
      margin: 0;
      text-align: left;
    }

    :global(.dark-mode) .ads-card p {
      color: #7dd3fc;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 1.5rem;
      margin-bottom: 3rem;
    }

    .stat-card {
      text-align: center;
      padding: 2rem 1rem;
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      border-radius: 16px;
    }

    :global(.dark-mode) .stat-card {
      background: #1e293b;
      border-color: #334155;
    }

    .stat-number {
      font-size: 3rem;
      font-weight: 800;
      color: #8b5cf6;
      line-height: 1;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.875rem;
      font-weight: 500;
      color: #64748b;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    :global(.dark-mode) .stat-label {
      color: #94a3b8;
    }

    .promise-box {
      background: linear-gradient(135deg, #f0fdf4, #dcfce7);
      border: 1px solid #bbf7d0;
      border-radius: 16px;
      padding: 2rem;
    }

    :global(.dark-mode) .promise-box {
      background: linear-gradient(135deg, #14532d, #166534);
      border-color: #16a34a;
    }

    .promise-box h3 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #15803d;
      margin: 0 0 1.5rem 0;
      text-align: center;
    }

    :global(.dark-mode) .promise-box h3 {
      color: #bbf7d0;
    }

    .promise-box ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .promise-box li {
      font-size: 1rem;
      color: #166534;
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    :global(.dark-mode) .promise-box li {
      color: #86efac;
    }

    .contact-links {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-top: 2rem;
      flex-wrap: wrap;
    }

    .contact-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: #667eea;
      color: white;
      text-decoration: none;
      border-radius: 12px;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .contact-link:hover {
      background: #5a67d8;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    @media (max-width: 768px) {
      .container {
        padding: 0 1.5rem;
      }

      .content-sections {
        gap: 3rem;
        margin-top: 2rem;
      }

      .section-header h2 {
        font-size: 1.75rem;
      }

      .support-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .support-card {
        padding: 1.5rem;
      }

      .stats-grid {
        grid-template-columns: repeat(2, 1fr);
      }

      .stat-number {
        font-size: 2.5rem;
      }

      .contact-links {
        flex-direction: column;
        align-items: center;
      }

      .contact-link {
        width: 100%;
        max-width: 200px;
        justify-content: center;
      }
    }
  </style>
</Layout>
