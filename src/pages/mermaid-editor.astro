      border-radius: 12px;
      overflow: auto;
      cursor: grab;
      position: relative;
      user-select: none;
    }

    .preview-container:active {
      cursor: grabbing;
    }

    .preview-container.dragging {
      cursor: grabbing;
    }

    .mermaid-diagram {
      width: fit-content;
      min-width: 100%;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      transition: transform 0.2s;
    }

    .error-message {
      padding: 1rem;
