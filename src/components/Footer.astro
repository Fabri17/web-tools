		{ name: 'MD to PDF', href: '/md-to-pdf' },
		{ name: 'Image Optimizer', href: '/image-optimizer' },
		{ name: 'QR Generator', href: '/qr-generator' },
		{ name: 'Lorem Ipsum', href: '/lorem-ipsum' },
		{ name: 'Service Status', href: '/service-status' }
	],
	company: [
		{ name: 'Inicio', href: '/' },
		{ name: 'Donar', href: '/donate' },
		{ name: 'GitHub', href: 'https://github.com/Fabri17' },
	]
